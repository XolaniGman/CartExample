@using CartExample.Models
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <h3>Products List</h3>
    <table cellpadding="2" cellspacing="2" border="1">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Photo</th>
            <th>Price</th>
            <th>Buy</th>
        </tr>
        @foreach (Product product in ViewBag.products)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td><img src="~/Content/Images/@product.Photo" width="60" /> </td>
                <td>@product.Price</td>
                <td align="center">
                    <a href="@Url.Action("Buy", "Cart", new { id = product.Id })">Buy Now</a>

                </td>
            </tr>
        }
    </table>
    <section id="hero" class="d-flex align-items-center">
        
                
                    @foreach (Product product in ViewBag.products)
                    {
                        <div class="col-4">


                            <div class="row">
                                <div class="col-md-8">

                                    <div class="card mb-4 product-wap rounded-0">
                                        <div class="card rounded-0">
                                            <img class="card-img rounded-0 img-fluid" src="~/Content/assets/img/banner_img_03.jpg">
                                            <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                                                <ul class="list-unstyled">
                                                    <li><a class="btn btn-success text-white" href="shop-single.html"><i class="far fa-heart"></i></a></li>
                                                    <li><a class="btn btn-success text-white mt-2" href="shop-single.html"><i class="far fa-eye"></i></a></li>
                                                    <li><a class="btn btn-success text-white mt-2" href="shop-single.html"><i class="fas fa-cart-plus"></i></a></li>
                                                </ul>
                                            </div>
                                        </div>


                                        <div class="card-body">
                                            <a href="shop-single.html" class="h3 text-decoration-none"
                                               style="text-shadow:initial"><strong><em>@product.Id</em></strong></a>
                                            <ul class="w-100 list-unstyled d-flex justify-content-between mb-0">
                                                <li>@product.Name</li>
                                                <li class="pt-2">
                                                    <span class="product-color-dot color-dot-red float-left rounded-circle ml-1"></span>
                                                    <span class="product-color-dot color-dot-blue float-left rounded-circle ml-1"></span>
                                                    <span class="product-color-dot color-dot-black float-left rounded-circle ml-1"></span>
                                                    <span class="product-color-dot color-dot-light float-left rounded-circle ml-1"></span>
                                                    <span class="product-color-dot color-dot-green float-left rounded-circle ml-1"></span>
                                                </li>
                                            </ul>
                                            <ul class="list-unstyled d-flex justify-content-center mb-1">
                                                <li>
                                                    <td align="center">
                                                        <a href="@Url.Action("Buy", "Cart", new { id = product.Id })">Buy Now</a>

                                                    </td>

                                                </li>
                                            </ul>
                                            <p class="text-center mb-0">@product.Price</p>

                                        </div>


                                    </div>
                                    <td align="center">
                                        <a href="@Url.Action("Buy", "Cart", new { id = product.Id })">Buy Now</a>

                                    </td>

                                </div>

                            </div>

                        </div>
                    }

                    <div class="btns">
                        <a href="#menu" class="btn-menu animated fadeInUp scrollto">Our Menu</a>
                        <a href="#book-a-table" class="btn-book animated fadeInUp scrollto">Book a Table</a>
                    </div>
              
                <div class="col-lg-4 d-flex align-items-center justify-content-center position-relative" data-aos="zoom-in" data-aos-delay="200">
                    <a href="https://www.youtube.com/watch?v=GlrxcuEDyF8" class="glightbox play-btn"></a>
                </div>

         
    </section><!-- End Hero -->

    <div class="carousel-inner product-links-wap" role="listbox">

        <!--First slide-->
        <div class="carousel-item active">
            <div class="row">
                @foreach (Product product in ViewBag.products)
                {
                    <div class="col-4">


                        <div class="row">
                            <div class="col-md-8">

                                <div class="card mb-4 product-wap rounded-0">
                                    <div class="card rounded-0">
                                        <img class="card-img rounded-0 img-fluid" src="~/Content/assets/img/banner_img_03.jpg">
                                        <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                                            <ul class="list-unstyled">
                                                <li><a class="btn btn-success text-white" href="shop-single.html"><i class="far fa-heart"></i></a></li>
                                                <li><a class="btn btn-success text-white mt-2" href="shop-single.html"><i class="far fa-eye"></i></a></li>
                                                <li><a class="btn btn-success text-white mt-2" href="shop-single.html"><i class="fas fa-cart-plus"></i></a></li>
                                            </ul>
                                        </div>
                                    </div>


                                    <div class="card-body">
                                        <a href="shop-single.html" class="h3 text-decoration-none"
                                           style="text-shadow:initial"><strong><em>@product.Id</em></strong></a>
                                        <ul class="w-100 list-unstyled d-flex justify-content-between mb-0">
                                            <li>@product.Name</li>
                                            <li class="pt-2">
                                                <span class="product-color-dot color-dot-red float-left rounded-circle ml-1"></span>
                                                <span class="product-color-dot color-dot-blue float-left rounded-circle ml-1"></span>
                                                <span class="product-color-dot color-dot-black float-left rounded-circle ml-1"></span>
                                                <span class="product-color-dot color-dot-light float-left rounded-circle ml-1"></span>
                                                <span class="product-color-dot color-dot-green float-left rounded-circle ml-1"></span>
                                            </li>
                                        </ul>
                                        <ul class="list-unstyled d-flex justify-content-center mb-1">
                                            <li>
                                                <td align="center">
                                                    <a href="@Url.Action("Buy", "Cart", new { id = product.Id })">Buy Now</a>

                                                </td>

                                            </li>
                                        </ul>
                                        <p class="text-center mb-0">@product.Price</p>

                                    </div>


                                </div>
                                <td align="center">
                                    <a href="@Url.Action("Buy", "Cart", new { id = product.Id })">Buy Now</a>

                                </td>

                            </div>

                        </div>

                    </div>
                }

            </div>
        </div>
        <!--End Slides-->
    </div>
</body>
</html>